<% provide :title, @field %>
<div class="field">
  <%= form_for @trip, url: owner_trip_path, method: :patch do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.hidden_field :field, value: @field %>
    <br>
    <% if @field == "plant" %>
      <%= f.cktext_area :plant, class: "form-control" %>
    <% end %>

    <% if @field == "expense" %>
      <%= f.cktext_area :expense, class: "form-control" %>
    <% end %>
    <br>
    <%= f.submit t("chance"), class: "btn btn-primary" %>
  <% end %>
</div>

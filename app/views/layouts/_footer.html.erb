<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 footer_column">
        <div class="footer_col">
          <div class="footer_content footer_about">
            <div class="logo_container footer_logo">
              <div class="logo">
                <%= link_to image_tag("logo.png"), root_path, class: "logo_img" %>
                <div class="logo_title"><%= t "base_title" %></div>
              </div>
            </div>
            <p class="footer_about_text"><%= t "footer_about_content" %></p>
          </div>
        </div>
      </div>

      <div class="col-lg-3 footer_column">
        <div class="footer_col">
          <div class="footer_title"><%= t "blog_post" %></div>
          <div class="footer_content footer_blog">

            <div class="footer_blog_item clearfix">
              <div class="footer_blog_image">
                <%= image_tag("footer_blog_1.jpg") %>
              </div>
              <div class="footer_blog_content">
                <div class="footer_blog_title">
                  <%= link_to Review.find(1).title, Review.find(1) %>
                </div>
                <div class="footer_blog_date"><%= Review.find(1).created_at.strftime(" %b %e, %Y") %></div>
              </div>
            </div>

            <div class="footer_blog_item clearfix">
              <div class="footer_blog_image">
                <%= image_tag("footer_blog_2.jpg") %>
              </div>
              <div class="footer_blog_content">
                <div class="footer_blog_title">
                  <%= link_to Review.find(2).title, Review.find(2) %>
                </div>
                <div class="footer_blog_date"><%= Review.find(2).created_at.strftime(" %b %e, %Y") %></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 footer_column">
        <div class="footer_col">
          <div class="footer_title">tags</div>
          <div class="footer_content footer_tags">
            <ul class="tags_list clearfix">
              <li class="tag_item">
                <%= link_to Hastag.find(1).title, hastag_path(title: Hastag.find(1).title) %>
              </li>
              <li class="tag_item">
                <%= link_to Hastag.find(2).title, hastag_path(title: Hastag.find(2).title) %>
              </li>
              <li class="tag_item">
                <%= link_to Hastag.find(3).title, hastag_path(title: Hastag.find(3).title) %>
              </li>
              <li class="tag_item">
                <%= link_to Hastag.find(4).title, hastag_path(title: Hastag.find(4).title) %>
              </li>
              <li class="tag_item">
                <%= link_to Hastag.find(5).title, hastag_path(title: Hastag.find(5).title) %>
              </li>
              <li class="tag_item">
                <%= link_to Hastag.find(6).title, hastag_path(title: Hastag.find(6).title) %>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-lg-3 footer_column">
        <div class="footer_col">
          <div class="footer_title"><%= t "contact" %></div>
          <div class="footer_content footer_contact">
            <ul class="contact_info_list">
              <li class="contact_info_item d-flex flex-row">
                  <div class="contact_info_icon">
                    <%= image_tag("placeholder.svg", alt: "") %>
                  </div>
                <div class="contact_info_text">Pham Thi Hanh Tuyen
                </div>
              </li>
              <li class="contact_info_item d-flex flex-row">
                <div class="contact_info_icon">
                  <%= image_tag("phone-call.svg", alt: "") %>
                </div>
                <div class="contact_info_text">2556-808-8613</div>
              </li>
              <li class="contact_info_item d-flex flex-row">
                <div class="contact_info_icon">
                  <%= image_tag("message.svg", alt: "") %>
                </div>
                <div class="contact_info_text">pham.hanh.tuyen@framgia.com
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</footer>

<div class="copyright">
  <div class="container">
    <div class="row">
      <div class="col-lg-5 order-lg-1 order-2  ">
        <div class="copyright_content d-flex flex-row align-items-center">
          <div>
            <%= t "copyright" %>
            <i class="fa fa-heart-o" aria-hidden="true"></i>
            <%= t "by" %>
            <a href="https://colorlib.com" target="_blank">Colorlib</a>
          </div>
        </div>
      </div>
      <div class="col-lg-7 order-lg-2 order-1">
        <div class="footer_nav_container d-flex flex-row align-items-center
          justify-content-lg-end">
          <div class="footer_nav">
            <ul class="footer_nav_list">
              <li class="footer_nav_item">
                <%= link_to t("home"), root_path %>
              </li>
              <li class="footer_nav_item">
                <%= link_to t("about"), about_path %>
              </li>
              <li class="footer_nav_item">
                <%= link_to t("reviews"), reviews_url %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

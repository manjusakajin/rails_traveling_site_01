<% provide :title, t("users_management") %>
<div class="row mt-3 justify-content-end">
  <% @users.each do |user| %>
    <div class="col-md-2 col-8 offset-2 offset-md-0 profile-box border
      p-1 rounded text-center mr-5 bg-light mb-2">
      <%= image_tag "review_1.jpg"%>
      <h5 class="m-0">
        <strong><%= user.name %></strong>
      </h5>
      <p class="mb-2"><%= user.email %></p>
      <% if current_user.admin? && !current_user.is_user?(user) %>
        <div class="pull-right">
          <%= link_to user, method: :delete,
            data: {confirm: t("confirm_delete")} do %>
            <i class="fa fa-trash-o fa-2x fa-border"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="pull-right mr-4">
  <%= paginate @users, theme: "twitter-bootstrap-4" %>
</div>
